<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarWeekDayStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TimePickerTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item> <!-- #3FB2BD for spinner highlights -->
        <item name="colorAccent">@color/accent</item> <!-- #FF5722 for selection -->
        <item name="android:textColorPrimary">@color/text_primary</item> <!-- #212121 -->
        <item name="android:textColorSecondary">@color/text_secondary</item> <!-- #757575 -->
    </style>
</resources>